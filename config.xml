<?xml version='1.0' encoding='utf-8'?>
<widget id="com.geymayer.vernam" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Vernam</name>
    <description>
      Perfect Secrecy Messenger
    </description>
    <author email="dag0310@gmail.com" href="http://daniel.geymayer.com">
      Daniel Geymayer
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon/ios/Icon-App-20x20@1x.png" width="20" height="20" />
        <icon src="res/icon/ios/Icon-App-20x20@2x.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-App-20x20@3x.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="res/icon/ios/Icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="res/icon/ios/Icon-App-29x29@3x.png" width="87" height="87" />
        <icon src="res/icon/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-App-40x40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/Icon-App-40x40@3x.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="res/icon/ios/Icon-App-57x57@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/Icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-App-60x60@3x.png" width="180" height="180" />
        <icon src="res/icon/ios/Icon-App-72x72@1x.png" width="72" height="72" />
        <icon src="res/icon/ios/Icon-App-72x72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/icon/ios/Icon-App-76x76@2x.png" width="152" height="152" />
        <icon src="res/icon/ios/Icon-App-76x76@3x.png" width="228" height="228" />
        <icon src="res/icon/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <icon src="res/icon/ios/Icon-Small-50x50@1x.png" width="50" height="50" />
        <icon src="res/icon/ios/Icon-Small-50x50@2x.png" width="100" height="100" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
</widget>
